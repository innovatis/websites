---
extension: html
filter: haml
---
!!!5
%html
  %head
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700,400italic' rel='stylesheet' type='text/css'>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    %title #{SITE.title} #{@page.title and '- '+@page.title}
    <link rel="stylesheet" href="/stylesheets/application.css">

    %meta{ name: 'description', content: @page.description || SITE.description}
    %meta{ name: 'keywords',    content: @page.keywords    || SITE.keywords}
    %meta{ name: 'author',      content: @page.author      || SITE.author}
    %meta{ name: 'viewport',    content: 'width=device-width, initial-scale=1.0'}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js"></script>
    <script>window.jQuery || document.write('<script src="js/libs/jquery-1.6.2.min.js">\x3C/script>')</script>
    <script src="/javascripts/application.js"></script>
    <script src="/javascripts/waypoints.min.js"></script>
    <script src="/javascripts/scroll.js"></script>
    <script src="/javascripts/jquery.livepopup.js"></script>
    <script src="http://innomailer.herokuapp.com/0.0.1/js/all.js"></script> 
  %body{ id: @page.css_id }
    #header-container
      #header
        .container.clearfix
          .column-40
            %h1
              %a#logo.ir{ href: '/'} ONQ-Pro Media
          .column-60
            #navigation-container
              %ul.nav#navigation.clearfix
                %li.first
                  %a{ href: '/'} Home
                %li
                  %a{ href: '/services.html'} Services
                %li
                  %a{ href: '/products.html'} Products
                %li
                  %a{ href: '/clients.html'} Clients
                %li.last
                  %a{ href: '/contact.html'}  Contact
    #content
      -if @page.crums
        .breadcrumbs
          .container
            %ul.nav
              - crums = @page.crums.clone
              - last  = crums.pop
              - crums.each do |crum|
                %li
                  %a{href: crum.values.first}= crum.keys.first
              - if last
                %li
                  %a.current{href: last.values.first}= last.keys.first
      #main-content.container.clearfix=@content
    #footer-container
      #footer
        .container.clearfix
          .column-33
            %h4.services-listing-header Services
            .column-80
              %ul.services-listing
                %li Music Supply
                %li Custom Design and Installations
                %li Service and Repairs
                %li Audio and Lighting System Rentals
                %li DJ Services Supplied by Crystal Sound
          .column-33
            %div#contact-info
              %ul
                %li 1112 Notre Dame Avenue
                %li Winnipeg, Manitoba
                %li Canada  R3E 0N8
                %li.phone (204) 694-9600
          .column-33
            %div#contact-form
              %h4 Questions/Comments:
              %form{:id => "mailform", 'data-mailform' => "f592bb357e9f87206571aab80c0c484c670d28d3", 'data-mailform-error' => "error-messages", :method => "get", :novalidate => "true"}
                #message-wrapper
                  .hidden.mailform-error
                    default error
                  .hidden.mailform-success
                    default success
                %fieldset
                  .inputs
                    .input
                      %label{:for => "message[name]"} Name*
                      %input.required-field{:type => "text", :name => "name", 'required' => "true"}
                    .input
                      %label{:for => "message[mail]"} E-Mail*
                      %input.required-field{:type => "text", :name => "email", 'required' => "true"}
                    .input
                      %label{:for => "message[body]"} Questions/Comments*
                      %textarea.required-field{:name => "body", 'required' => "true"}
                  .actions
                    %input.input-button{:type => "submit", :value => "submit"}
                    %p.required-message * Required
                    .hidden.mailform-loading
      
